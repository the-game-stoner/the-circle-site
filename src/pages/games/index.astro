---
const SITE_NAME = "The-Circle";
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Games • {SITE_NAME}</title>

    <meta
      name="description"
      content="Games built by The-Circle — async-friendly party games and experiments."
    />

    <link rel="icon" href="/favicon.png" type="image/png" />
  </head>

  <body>
    <div class="page">
      <!-- Top Nav -->
      <header class="top">
        <div class="container nav">
          <a class="brand" href="/">
            <img src="/favicon.png" alt="" class="logo" />
            <span class="name">{SITE_NAME}</span>
          </a>

          <nav class="links">
            <a href="/discord">Discord</a>
            <a href="/league">League</a>
            <a href="/music">Music</a>
            <a href="/games" class="active">Games</a>
            <a href="/blog">Blog</a>
          </nav>
        </div>
      </header>

      <!-- Page -->
      <main class="container">
        <!-- Hero -->
        <section class="hero">
          <div class="heroBox">
            <h1>Games</h1>
            <p class="lead">
              Small, fun games built for hanging out — async friendly, no installs,
              just click and play.
            </p>
          </div>
        </section>

        <!-- Games Grid -->
        <section class="card">
          <h2>Available Games</h2>
          <p class="note">More ideas are always cooking.</p>

          <div class="grid">
            <!-- Circle Cards -->
            <article class="tile">
              <div class="tileTop">
                <h3>Circle Cards</h3>
                <span class="chip live">Live</span>
              </div>
              <p>
                A Cards Against Humanity–style party game built for async play.
                Create a room, share the link, let chaos happen.
              </p>
              <div class="tileCta">
                <a class="btn primary" href="/games/circle-cards">Play</a>
              </div>
            </article>

            <!-- Coming Soon -->
            <article class="tile soft">
              <div class="tileTop">
                <h3>More Coming Soon</h3>
                <span class="chip">Soon™</span>
              </div>
              <p>
                Experiments, dumb ideas, and community-driven games.
                If it sounds fun, it’ll probably show up here.
              </p>
            </article>
          </div>
        </section>
      </main>

      <!-- Footer -->
      <footer class="footer">
        <div class="container foot">
          <span>© {year} {SITE_NAME}</span>
          <span class="muted">You’re either in The-Circle or you’re not</span>
        </div>
      </footer>
    </div>

    <style>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        background: #070a0f;
        color: rgba(255,255,255,.92);
      }

      a { color: inherit; text-decoration: none; }
      .container { max-width: 1060px; margin: 0 auto; padding: 0 18px; }

      /* Nav */
      .top {
        position: sticky;
        top: 0;
        backdrop-filter: blur(12px);
        background: rgba(7,10,15,.65);
        border-bottom: 1px solid rgba(255,255,255,.1);
        z-index: 10;
      }

      .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0;
      }

      .brand {
        display: flex;
        gap: 10px;
        align-items: center;
        font-weight: 900;
      }

      .logo {
        width: 28px;
        height: 28px;
      }

      .links {
        display: flex;
        gap: 14px;
        font-size: 14px;
      }

      .links a {
        opacity: .75;
      }

      .links a.active,
      .links a:hover {
        opacity: 1;
      }

      /* Hero */
      .hero {
        padding: 40px 0 18px;
      }

      .heroBox {
        border: 1px solid rgba(255,255,255,.12);
        border-radius: 20px;
        background: rgba(255,255,255,.06);
        padding: 26px;
        box-shadow: 0 20px 60px rgba(0,0,0,.45);
      }

      h1 {
        margin: 0 0 10px;
        font-size: 44px;
        letter-spacing: -0.03em;
      }

      .lead {
        max-width: 70ch;
        color: rgba(255,255,255,.72);
      }

      /* Cards */
      .card {
        margin: 20px 0;
        border: 1px solid rgba(255,255,255,.12);
        background: rgba(255,255,255,.06);
        border-radius: 18px;
        padding: 20px;
      }

      h2 {
        margin: 0 0 6px;
        font-size: 22px;
      }

      .note {
        margin: 0;
        color: rgba(255,255,255,.65);
      }

      .grid {
        margin-top: 14px;
        display: grid;
        grid-template-columns: repeat(2, minmax(0,1fr));
        gap: 12px;
      }

      .tile {
        border: 1px solid rgba(255,255,255,.12);
        border-radius: 16px;
        padding: 16px;
        background: rgba(255,255,255,.04);
      }

      .tile.soft {
        opacity: .75;
      }

      .tileTop {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .tile p {
        margin: 10px 0 0;
        font-size: 14.5px;
        color: rgba(255,255,255,.7);
      }

      .tileCta {
        margin-top: 14px;
      }

      /* Chips & Buttons */
      .chip {
        font-size: 12px;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,.18);
      }

      .chip.live {
        border-color: rgba(9,255,3,.4);
        background: rgba(9,255,3,.12);
      }

      .btn {
        display: inline-block;
        padding: 12px 18px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,.18);
        background: rgba(255,255,255,.05);
        font-weight: 800;
      }

      .btn.primary {
        border-color: rgba(9,255,3,.55);
        background: rgba(9,255,3,.16);
      }

      /* Footer */
      .footer {
        margin-top: 40px;
        border-top: 1px solid rgba(255,255,255,.1);
        background: rgba(7,10,15,.4);
      }

      .foot {
        display: flex;
        justify-content: space-between;
        padding: 16px 0;
        flex-wrap: wrap;
      }

      .muted {
        color: rgba(255,255,255,.55);
      }

      @media (max-width: 900px) {
        .grid { grid-template-columns: 1fr; }
        h1 { font-size: 36px; }
      }
    </style>
  </body>
</html>
