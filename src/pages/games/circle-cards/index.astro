---
const SITE_NAME = "The-Circle";
const API_BASE = import.meta.env.PUBLIC_CC_API;
const API_URL = (API_BASE || "https://circle-cards-api.thegamestoners.workers.dev").replace(/\/+$/, "");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Circle Cards • Games • {SITE_NAME}</title>
    <meta name="description" content="Create or join a Circle Cards room." />
    <link rel="icon" href="/favicon.png" type="image/png" />
  </head>

  <body>
    <!-- Put API URL in HTML so JS can’t “{API_URL}” itself -->
    <main class="wrap" data-api={API_URL}>
      <header class="hero">
        <h1>Circle Cards</h1>
        <p class="lead">
          Create a room, share the link, get at least 4 people in — then the game starts.
        </p>
      </header>

      <section class="card">
        <h2>Create a room</h2>

        <label for="hostName">Your name</label>
        <input id="hostName" placeholder="Nickname (optional)" />

        <button id="create" class="btn primary">Create Room</button>
        <p id="createOut" class="muted small"></p>

        <p class="tiny muted">
          API in use: <span class="mono" id="apiText"></span>
        </p>
      </section>

      <section class="card">
        <h2>Join a room</h2>

        <label for="roomId">Room ID</label>
        <input id="roomId" placeholder="e.g. 7zwio30" />

        <button id="go" class="btn">Go</button>
        <p class="muted small">Tip: you can also just open the invite link.</p>
      </section>
    </main>

    <script>
      const root = document.querySelector("main[data-api]");
      const API = (root?.dataset?.api || "").replace(/\/+$/, "");
      document.getElementById("apiText").textContent = API || "(missing)";

      const createOut = document.getElementById("createOut");

      document.getElementById("go").onclick = () => {
        const id = (document.getElementById("roomId").value || "").trim();
        if (!id) return;
        location.href = "/games/circle-cards/" + encodeURIComponent(id);
      };

      document.getElementById("create").onclick = async () => {
        if (!API) {
          createOut.textContent = "API URL missing (PUBLIC_CC_API).";
          return;
        }

        createOut.textContent = "Creating…";

        const name = (document.getElementById("hostName").value || "").trim();

        let r;
        try {
          r = await fetch(API + "/api/rooms", {
            method: "POST",
            headers: { "content-type": "application/json" },
            // send name if your worker supports it; harmless if ignored
            body: JSON.stringify(name ? { name } : {}),
          });
        } catch (e) {
          createOut.textContent = "Network error: " + (e?.message || e);
          return;
        }

        const text = await r.text();
        let data = {};
        try { data = JSON.parse(text); } catch {}

        if (!r.ok) {
          createOut.textContent = (data.error || `Failed (${r.status})`) + ": " + text.slice(0, 220);
          return;
        }

        // expected from your worker: { roomId, hostToken }
        if (data.hostToken) localStorage.setItem("cc_host_" + data.roomId, data.hostToken);
        location.href = "/games/circle-cards/" + data.roomId;
      };
    </script>

    <style>
      body{ margin:0; font-family:system-ui; background:#070a0f; color:#fff; }
      .wrap{ max-width:860px; margin:40px auto; padding:0 18px; }
      .hero{ margin-bottom:18px; }
      h1{ margin:0 0 6px; font-size:42px; }
      .lead{ color:rgba(255,255,255,.72); max-width:70ch; }

      .card{ border:1px solid rgba(255,255,255,.12); background:rgba(255,255,255,.06); border-radius:18px; padding:18px; margin:14px 0; }
      h2{ margin:0 0 10px; font-size:18px; }
      label{ font-weight:800; display:block; margin: 10px 0 8px; }

      input{
        width:100%;
        box-sizing:border-box;
        padding:10px;
        border-radius:12px;
        border:1px solid rgba(255,255,255,.14);
        background:rgba(0,0,0,.25);
        color:#fff;
      }

      .btn{
        margin-top:12px;
        padding:12px 18px;
        border-radius:14px;
        border:1px solid rgba(255,255,255,.18);
        background:rgba(255,255,255,.05);
        color:#fff;
        font-weight:800;
        cursor:pointer;
      }
      .btn.primary{ border-color:rgba(9,255,3,.55); background:rgba(9,255,3,.14); }

      .muted{ color:rgba(255,255,255,.68); }
      .small{ font-size:13px; }
      .tiny{ font-size:12px; margin-top:10px; }
      .mono{ font-family:ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace; }
    </style>
  </body>
</html>
