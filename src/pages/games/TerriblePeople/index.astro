---
const SITE_NAME = "The-Circle";
const year = new Date().getFullYear();

/**
 * Keep all your update content here so the page is easy to maintain.
 * Add/remove items over time.
 */
const GAME = {
  title: "Terrible People",
  status: "In Development",
  tagline: "A multiplayer party card game built in Unreal Engine.",
  platforms: ["Windows PC"],
  release: "TBA",
  engine: "Unreal Engine",
};

const UPDATES = [
  {
    date: "2026-01-30",
    title: "Project rebooted",
    body:
      "Pivoted away from the browser version. Terrible People is now PC-first in Unreal Engine. This page will be the dev hub.",
  },
  // Add more updates like:
  // { date: "2026-02-10", title: "Lobby + matchmaking", body: "Basic lobby flow is in. Next: deck management + rounds." }
];

const SCREENSHOTS = [
  // Replace these with your real images later (put them in /public/images/terrible-people/)
  // { src: "/images/terrible-people/screen1.png", alt: "Lobby screen" },
  // { src: "/images/terrible-people/screen2.png", alt: "Card selection" },
  // { src: "/images/terrible-people/screen3.png", alt: "Round results" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{GAME.title} • Games • {SITE_NAME}</title>
    <meta
      name="description"
      content="Terrible People — a multiplayer party card game built in Unreal Engine. Follow development updates, screenshots, and release info."
    />
    <link rel="icon" href="/favicon.png" type="image/png" />
  </head>

  <body>
    <div class="page">
      <header class="top">
        <div class="container nav">
          <a class="brand" href="/" aria-label={`${SITE_NAME} Home`}>
            <img src="/favicon.png" alt="" class="logo" />
            <span class="name">{SITE_NAME}</span>
          </a>

          <nav class="links" aria-label="Primary">
            <a href="/discord" class="navLink">Discord</a>
            <a href="/league" class="navLink">League</a>
            <a href="/music" class="navLink">Music</a>
            <a href="/games" class="navLink active">Games</a>
            <a href="/blog" class="navLink">Blog</a>
          </nav>

          <details class="menu">
            <summary class="menuBtn" aria-label="Open menu">
              <span class="menuIcon" aria-hidden="true"></span>
            </summary>
            <div class="menuPanel" role="menu">
              <a href="/discord" role="menuitem">Discord</a>
              <a href="/league" role="menuitem">League</a>
              <a href="/music" role="menuitem">Music</a>
              <a href="/games" role="menuitem">Games</a>
              <a href="/blog" role="menuitem">Blog</a>
            </div>
          </details>
        </div>
      </header>

      <main class="container">
        <section class="hero">
          <div class="heroBox">
            <div class="kicker">
              <span class="pill">Game</span>
              <span class="dot" aria-hidden="true"></span>
              <span class="pill soft">{GAME.status}</span>
            </div>

            <h1>{GAME.title}</h1>
            <p class="lead">{GAME.tagline}</p>

            <div class="facts">
              <div class="fact">
                <div class="factLbl">Platform</div>
                <div class="factVal">{GAME.platforms.join(" • ")}</div>
              </div>
              <div class="fact">
                <div class="factLbl">Engine</div>
                <div class="factVal">{GAME.engine}</div>
              </div>
              <div class="fact">
                <div class="factLbl">Release</div>
                <div class="factVal">{GAME.release}</div>
              </div>
            </div>

            <div class="ctaRow">
              <a class="btn" href="/games">← Back to Games</a>
              <a class="btn primary" href="/discord">Join Discord for Updates</a>
            </div>
          </div>
        </section>

        <section class="card">
          <div class="cardHead">
            <div>
              <h2>What is it?</h2>
              <p class="note">Quick overview (you can rewrite this anytime).</p>
            </div>
          </div>

          <div class="prose">
            <p>
              <b>Terrible People</b> is a multiplayer party card game where friends gather, pick cards,
              and make the worst possible combinations on purpose.
              It’s inspired by the chaos of classic party card games, but built as a PC experience in Unreal Engine.
            </p>

            <p class="muted">
              This page is the official dev hub — when features land, screenshots drop, or a release date appears,
              it’ll show up here first.
            </p>
          </div>

          <div class="pillRow">
            <span class="chip">Multiplayer</span>
            <span class="chip">Party game</span>
            <span class="chip">Dark humor</span>
            <span class="chip">PC-first</span>
          </div>
        </section>

        <section class="card">
          <div class="cardHead">
            <div>
              <h2>Dev updates</h2>
              <p class="note">Newest at the top.</p>
            </div>
          </div>

          <div class="updates">
            {UPDATES.map((u) => (
              <article class="update">
                <div class="updateTop">
                  <div class="updateTitle">{u.title}</div>
                  <div class="updateDate">{u.date}</div>
                </div>
                <p class="updateBody">{u.body}</p>
              </article>
            ))}
          </div>

          <div class="tiny muted">
            Tip: add updates in the <span class="mono">UPDATES</span> array at the top of the file.
          </div>
        </section>

        <section class="card">
          <div class="cardHead">
            <div>
              <h2>Screenshots</h2>
              <p class="note">Drop images into <span class="mono">/public/images/terrible-people/</span></p>
            </div>
          </div>

          {SCREENSHOTS.length ? (
            <div class="gallery">
              {SCREENSHOTS.map((s) => (
                <figure class="shot">
                  <img src={s.src} alt={s.alt} loading="lazy" />
                  <figcaption class="muted tiny">{s.alt}</figcaption>
                </figure>
              ))}
            </div>
          ) : (
            <div class="empty">
              <div class="emptyBox">
                <div class="emptyTitle">No screenshots yet</div>
                <div class="muted">
                  When you have images, add them to the <span class="mono">SCREENSHOTS</span> array.
                </div>
              </div>
            </div>
          )}
        </section>

        <section class="card soft">
          <div class="row">
            <div>
              <h2>Follow the project</h2>
              <p class="note">If you want pings when stuff ships.</p>
            </div>
            <div class="ctaRow">
              <a class="btn primary" href="/discord">Discord</a>
              <a class="btn" href="/games">Games Hub</a>
            </div>
          </div>
        </section>
      </main>

      <footer class="footer">
        <div class="container foot">
          <span>© {year} {SITE_NAME}</span>
          <span class="muted">You’re either in The-Circle or you’re not</span>
        </div>
      </footer>
    </div>

    <style is:global>
      :root{
        --bg:#070a0f;
        --panel:rgba(255,255,255,.06);
        --panel2:rgba(255,255,255,.04);
        --border:rgba(255,255,255,.12);
        --text:rgba(255,255,255,.92);
        --muted:rgba(255,255,255,.68);
        --muted2:rgba(255,255,255,.55);
        --accent:#09ff03;
        --shadow:0 20px 60px rgba(0,0,0,.45);
        --shadow2:0 18px 44px rgba(0,0,0,.35);
        --focus:0 0 0 3px rgba(9,255,3,.25);
      }

      *{ box-sizing:border-box; }
      body{
        margin:0;
        font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
        background:var(--bg);
        color:var(--text);
        background-image:
          radial-gradient(900px 500px at 15% 10%, rgba(9,255,3,0.14), transparent 60%),
          radial-gradient(800px 450px at 85% 15%, rgba(120,170,255,0.18), transparent 55%),
          linear-gradient(var(--bg), var(--bg));
        background-attachment:fixed;
      }

      a{ color:inherit; text-decoration:none; }
      .container{ max-width:1060px; margin:0 auto; padding:0 18px; }
      .page{ min-height:100vh; display:flex; flex-direction:column; }
      main{ flex:1; }

      .top{
        position:sticky; top:0; z-index:10;
        backdrop-filter:blur(12px);
        background:rgba(7,10,15,.65);
        border-bottom:1px solid rgba(255,255,255,.10);
      }

      .nav{ display:flex; justify-content:space-between; align-items:center; gap:14px; padding:14px 0; }
      .brand{ display:flex; align-items:center; gap:10px; font-weight:900; letter-spacing:-.02em; }
      .logo{ width:28px; height:28px; filter:drop-shadow(0 0 10px rgba(9,255,3,.18)); }
      .name{ font-size:15px; opacity:.95; }

      .links{ display:flex; gap:14px; font-size:14px; }
      .navLink{
        color:rgba(255,255,255,.78);
        padding:8px 10px;
        border-radius:12px;
        transition:background .12s ease,color .12s ease;
      }
      .navLink:hover{ color:rgba(255,255,255,.95); background:rgba(255,255,255,.06); }
      .navLink.active{ color:rgba(255,255,255,.95); background:rgba(255,255,255,.06); }
      .navLink:focus-visible{ outline:none; box-shadow:var(--focus); }

      .menu{ display:none; position:relative; }
      .menuBtn{
        list-style:none; cursor:pointer; user-select:none;
        width:44px; height:44px; border-radius:14px;
        border:1px solid rgba(255,255,255,.12);
        background:rgba(255,255,255,.04);
        display:grid; place-items:center;
      }
      .menuBtn::-webkit-details-marker{ display:none; }
      .menuIcon{ width:18px; height:2px; background:rgba(255,255,255,.85); border-radius:999px; position:relative; }
      .menuIcon::before,.menuIcon::after{
        content:""; position:absolute; left:0; width:18px; height:2px;
        background:rgba(255,255,255,.85); border-radius:999px;
      }
      .menuIcon::before{ top:-6px; } .menuIcon::after{ top:6px; }
      .menuPanel{
        position:absolute; right:0; top:56px; width:220px; padding:10px;
        border-radius:16px; border:1px solid rgba(255,255,255,.12);
        background:rgba(7,10,15,.92); backdrop-filter:blur(12px);
        box-shadow:var(--shadow2);
      }
      .menuPanel a{ display:block; padding:10px 10px; border-radius:12px; color:rgba(255,255,255,.86); }
      .menuPanel a:hover{ background:rgba(255,255,255,.06); color:rgba(255,255,255,.96); }

      .hero{ padding:40px 0 18px; }
      .heroBox{
        border:1px solid rgba(255,255,255,.12);
        border-radius:20px;
        background:rgba(255,255,255,.06);
        padding:26px;
        box-shadow:var(--shadow);
      }

      .kicker{ display:flex; gap:10px; align-items:center; flex-wrap:wrap; margin-bottom:10px; }
      .pill{ border:1px solid rgba(255,255,255,.12); background:rgba(255,255,255,.04); padding:6px 10px; border-radius:999px; font-size:12px; color:rgba(255,255,255,.78); }
      .pill.soft{ border-color:rgba(9,255,3,.25); background:rgba(9,255,3,.08); }
      .dot{ width:5px; height:5px; border-radius:999px; background:rgba(255,255,255,.55); }

      h1{ margin:0 0 10px; font-size:44px; letter-spacing:-.03em; }
      .lead{ max-width:72ch; color:rgba(255,255,255,.72); margin:0; }

      .facts{
        margin-top:14px;
        display:grid;
        grid-template-columns:repeat(3,minmax(0,1fr));
        gap:10px;
      }
      .fact{
        border:1px solid rgba(255,255,255,.12);
        background:rgba(255,255,255,.04);
        border-radius:14px;
        padding:12px;
      }
      .factLbl{ font-size:12px; letter-spacing:.08em; text-transform:uppercase; color:rgba(255,255,255,.60); font-weight:900; }
      .factVal{ margin-top:6px; font-weight:900; color:rgba(255,255,255,.90); }

      .ctaRow{ display:flex; gap:10px; flex-wrap:wrap; margin-top:16px; }

      .card{
        margin:20px 0;
        border:1px solid rgba(255,255,255,.12);
        background:rgba(255,255,255,.06);
        border-radius:18px;
        padding:20px;
        box-shadow:var(--shadow2);
      }
      .card.soft{ opacity:.82; }

      .cardHead{ display:flex; align-items:flex-end; justify-content:space-between; gap:12px; }
      h2{ margin:0 0 6px; font-size:20px; }
      .note{ margin:0; color:rgba(255,255,255,.65); }
      .muted{ color:rgba(255,255,255,.70); }

      .prose p{ margin:10px 0 0; line-height:1.65; color:rgba(255,255,255,.84); }
      .prose p.muted{ color:rgba(255,255,255,.70); }

      .pillRow{ display:flex; flex-wrap:wrap; gap:10px; margin-top:14px; }
      .chip{
        font-size:12px; padding:6px 10px; border-radius:999px;
        border:1px solid rgba(255,255,255,.18); background:rgba(255,255,255,.04);
      }

      .updates{ display:grid; gap:10px; margin-top:10px; }
      .update{
        border:1px solid rgba(255,255,255,.12);
        background:rgba(255,255,255,.04);
        border-radius:14px;
        padding:12px;
      }
      .updateTop{ display:flex; justify-content:space-between; gap:10px; flex-wrap:wrap; }
      .updateTitle{ font-weight:900; }
      .updateDate{ color:rgba(255,255,255,.62); font-size:13px; }
      .updateBody{ margin:8px 0 0; color:rgba(255,255,255,.74); line-height:1.6; }

      .gallery{
        margin-top:12px;
        display:grid;
        grid-template-columns:repeat(3,minmax(0,1fr));
        gap:10px;
      }
      .shot{
        margin:0;
        border:1px solid rgba(255,255,255,.12);
        background:rgba(255,255,255,.04);
        border-radius:14px;
        overflow:hidden;
      }
      .shot img{ width:100%; height:180px; object-fit:cover; display:block; }
      .tiny{ font-size:12px; padding:10px 12px; margin:0; }

      .empty{ margin-top:12px; }
      .emptyBox{
        border:1px dashed rgba(255,255,255,.18);
        border-radius:14px;
        padding:16px;
        background:rgba(255,255,255,.03);
      }
      .emptyTitle{ font-weight:900; margin-bottom:6px; }

      .row{ display:flex; align-items:flex-end; justify-content:space-between; gap:12px; flex-wrap:wrap; }

      .mono{ font-family:ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace; }

      .btn{
        display:inline-block;
        padding:12px 18px;
        border-radius:14px;
        border:1px solid rgba(255,255,255,.18);
        background:rgba(255,255,255,.05);
        font-weight:900;
      }
      .btn.primary{ border-color:rgba(9,255,3,.55); background:rgba(9,255,3,.16); }

      .footer{ margin-top:40px; border-top:1px solid rgba(255,255,255,.10); background:rgba(7,10,15,.40); }
      .foot{ display:flex; justify-content:space-between; padding:16px 0; flex-wrap:wrap; gap:12px; }

      @media (max-width: 900px){
        .facts{ grid-template-columns:1fr; }
        .gallery{ grid-template-columns:1fr; }
        h1{ font-size:36px; }
      }
      @media (max-width: 820px){
        .links{ display:none; }
        .menu{ display:block; }
      }
    </style>
  </body>
</html>
