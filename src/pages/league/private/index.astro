---
const SITE_NAME = "The-Circle";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Private League • {SITE_NAME}</title>
    <meta
      name="description"
      content="The-Circle private fantasy league — local, invite-only, and played for real stakes."
    />
  </head>

  <body>
    <div class="page">
      <header class="top">
        <div class="container nav">
          <a class="brand" href="/">
            <span class="mark" aria-hidden="true"></span>
            <span>{SITE_NAME}</span>
          </a>
          <nav class="links">
            <a href="/">Home</a>
            <a href="/league">League</a>
            <a href="/about">About</a>
          </nav>
        </div>
      </header>

      <main class="container">
        <section class="hero">
          <div class="heroCard">
            <h1>The Circle League</h1>

            <p class="lead">
              This is The-Circle’s private fantasy football league.
              It’s a local, invite-only league played for real stakes with a physical trophy.
            </p>

            <p class="fine">
              If you want to play join our public league!.
            </p>
          </div>
        </section>

        <section class="card">
          <h2>League pages</h2>
          <p class="note">
            Everything related to the private league lives here.
          </p>

          <div class="grid">
            <article class="tile">
              <h3>Teams & Owners</h3>
              <p>
                Current teams, owners.
              </p>
              <div class="tileCta">
                <a class="btn primary" href="/league/private/teams">View teams</a>
              </div>
            </article>

            <article class="tile">
              <h3>History & records</h3>
              <p>
                Past seasons, standings, winners, and last-place finishes.
              </p>
              <div class="tileCta">
                <a class="btn primary" href="/league/private/history">View history</a>
              </div>
            </article>

            <article class="tile">
              <h3>Rules & settings</h3>
              <p>
                League rules, scoring settings, policies, and commissioner guidelines.
              </p>
              <div class="tileCta">
                <a class="btn primary" href="/league/private/rules">View rules</a>
              </div>
            </article>
          </div>
        </section>
      </main>

      <footer class="footer">
        <div class="container foot">
          <span>© {new Date().getFullYear()} {SITE_NAME}</span>
          <span class="muted">Private League</span>
        </div>
      </footer>
    </div>

    <style is:global>
      html, body { height: 100%; }

      body{
        margin:0;
        min-height:100vh;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        color: rgba(255,255,255,0.92);
        background-image:
          radial-gradient(900px 500px at 15% 10%, rgba(9,255,3,0.14), transparent 60%),
          radial-gradient(800px 450px at 85% 15%, rgba(120,170,255,0.18), transparent 55%),
          radial-gradient(700px 450px at 55% 95%, rgba(255,170,120,0.10), transparent 55%),
          linear-gradient(#070a0f, #070a0f);
        background-repeat:no-repeat;
        background-size:100% 100%;
        background-attachment:fixed;
      }

      a{ color:inherit; text-decoration:none; }
      .container{ max-width:1020px; margin:0 auto; padding:0 18px; }

      .page{ min-height:100vh; display:flex; flex-direction:column; }
      main{ flex:1; }

      .top{
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(10px);
        background: rgba(7,10,15,0.55);
        border-bottom: 1px solid rgba(255,255,255,0.10);
      }

      .nav{
        display:flex;
        align-items:center;
        justify-content:space-between;
        padding:14px 18px;
        gap:14px;
      }

      .brand{
        display:flex;
        align-items:center;
        gap:10px;
        font-weight:900;
        letter-spacing:-0.02em;
        white-space:nowrap;
      }

      .mark{
        width:12px;
        height:12px;
        border-radius:999px;
        background:#09ff03;
        box-shadow:
          0 0 0 6px rgba(9,255,3,0.12),
          0 0 28px rgba(9,255,3,0.25);
      }

      .links{ display:flex; gap:14px; align-items:center; }
      .links a{ color: rgba(255,255,255,0.78); font-size:14px; }
      .links a:hover{ color: rgba(255,255,255,0.95); }

      .hero{ padding: 32px 0 14px; }

      .heroCard{
        border: 1px solid rgba(255,255,255,0.12);
        border-radius: 22px;
        background: rgba(255,255,255,0.06);
        box-shadow: 0 24px 70px rgba(0,0,0,0.45);
        padding: 22px;
      }

      h1{
        margin:0 0 10px;
        font-size: 44px;
        letter-spacing:-0.03em;
      }

      h2{
        margin:0 0 6px;
        font-size:22px;
      }

      h3{
        margin:0;
        font-size:18px;
      }

      .lead{
        margin:0 0 10px;
        color: rgba(255,255,255,0.74);
        font-size:17px;
        line-height:1.7;
        max-width:90ch;
      }

      .fine{
        margin-top:8px;
        color: rgba(255,255,255,0.55);
        font-size:13px;
      }

      .card{
        margin:18px 0 28px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.06);
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.45);
      }

      .note{
        margin:0;
        color: rgba(255,255,255,0.70);
        line-height:1.6;
      }

      .grid{
        display:grid;
        grid-template-columns: repeat(3, minmax(0,1fr));
        gap:12px;
        margin-top:14px;
      }

      .tile{
        border: 1px solid rgba(255,255,255,0.12);
        border-radius: 18px;
        padding: 16px;
        background: rgba(255,255,255,0.03);
      }

      .tile p{
        margin:10px 0 0;
        color: rgba(255,255,255,0.72);
        line-height:1.6;
      }

      .tileCta{
        display:flex;
        gap:10px;
        margin-top:14px;
      }

      .btn{
        display:inline-flex;
        align-items:center;
        justify-content:center;
        padding:12px 16px;
        border-radius:14px;
        border:1px solid rgba(255,255,255,0.14);
        background:rgba(255,255,255,0.04);
        box-shadow:0 8px 25px rgba(0,0,0,0.22);
        transition:transform .12s ease, background .12s ease;
      }

      .btn:hover{
        transform:translateY(-1px);
        background:rgba(255,255,255,0.07);
      }

      .btn.primary{
        border-color:rgba(9,255,3,0.22);
        background:rgba(9,255,3,0.10);
      }

      .footer{
        border-top:1px solid rgba(255,255,255,0.10);
        background:rgba(7,10,15,0.35);
        backdrop-filter:blur(10px);
      }

      .foot{
        display:flex;
        justify-content:space-between;
        gap:12px;
        padding:16px 18px;
        flex-wrap:wrap;
      }

      .muted{ color: rgba(255,255,255,0.55); }

      @media (max-width: 980px){
        .grid{ grid-template-columns:1fr; }
        h1{ font-size:36px; }
      }

      @media (max-width: 820px){
        .links{ display:none; }
      }
    </style>
  </body>
</html>
