---
const SITE_NAME = "The-Circle";

/** Edit these later */
const TEAMS = [
  { name: "THE MUD DOGS", owner: "TGS", logo: "" },
  { name: "SLAMMY SOSA", owner: "Scootsmckenzie", logo: "" },
  { name: "GIVEYERBALLZATUG", owner: "Beltu", logo: "" },
  { name: "TO INFINITY & BIJAN", owner: "Scooter", logo: "" },
  { name: "MAKE FOOTBALL GREAT AGAIN", owner: "Toaster?", logo: "" },
  { name: "ROLZONSHABBUTZ", owner: "Morti", logo: "" },
  { name: "SHIVAS CHOSEN", owner: "SideShowKen", logo: "" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Teams • Fantasy League • {SITE_NAME}</title>
    <link rel="icon" href="/favicon.png" type="image/svg+xml">
    <meta name="description" content="Current teams and owners in The-Circle fantasy league." />
  </head>

  <body>
    <div class="page">
      <header class="top">
        <div class="container nav">
          <a class="brand" href="/">
          <img class="mark" src="/favicon.png" alt="The-Circle" />
            <span>{SITE_NAME}</span>
            </a>
          <nav class="links">
            <a href="/">Home</a>
            <a href="/discord">Discord</a>
            <a href="/league">League</a>
            <a href="/Music">Music</a>
            <a href="/about">About</a>
            <a href="/blog">Blog</a>

          </nav>

        </div>
      </header>

      <main class="container">
        <section class="card">
          <div class="head">
            <h1>Teams & Owners</h1>
            <a class="mini" href="/league/private">← Back to League Hub</a>
          </div>

          <p class="lead">
            Current teams, owners, and logos.
          </p>

          <div class="grid">
            {TEAMS.map((t) => (
              <article class="team">
                <div class="logo" aria-hidden="true">
                  {t.logo ? <img src={t.logo} alt="" /> : <span class="initial">{t.name.slice(0, 1)}</span>}
                </div>
                <div>
                  <h2>{t.name}</h2>
                  <p class="muted">Owner: {t.owner}</p>
                </div>
              </article>
            ))}
          </div>

          <div class="cta">
            <a class="btn ghost" href="/league/private/history">League history</a>
            <a class="btn ghost" href="/league/private/rules">Rules & settings</a>
          </div>
        </section>
      </main>
    </div>

    <style is:global>
      html, body { height: 100%; }
      body{
        margin:0; min-height:100vh;
        font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
        color:rgba(255,255,255,0.92);
        background-image:
          radial-gradient(900px 500px at 15% 10%, rgba(9,255,3,0.14), transparent 60%),
          radial-gradient(800px 450px at 85% 15%, rgba(120,170,255,0.18), transparent 55%),
          radial-gradient(700px 450px at 55% 95%, rgba(255,170,120,0.10), transparent 55%),
          linear-gradient(#070a0f, #070a0f);
        background-repeat:no-repeat;
        background-size:100% 100%;
        background-attachment:fixed;
      }
      .page{min-height:100vh;display:flex;flex-direction:column}
      main{flex:1}
      a{color:inherit;text-decoration:none}
      .container{max-width:1020px;margin:0 auto;padding:0 18px}
      .top{position:sticky;top:0;z-index:10;backdrop-filter:blur(10px);background:rgba(7,10,15,0.55);border-bottom:1px solid rgba(255,255,255,0.10)}
      .nav{display:flex;align-items:center;justify-content:space-between;padding:14px 18px;gap:14px}
      .brand{display:flex;gap:10px;align-items:center;font-weight:800;letter-spacing:-0.02em;white-space:nowrap}
      .mark{width:28px;height:28px;display:block;flex:0 0 28px;object-fit:contain;border-radius:0; /* important: don't force a dot */background:transparent;box-shadow:none;filter: drop-shadow(0 6px 16px rgba(9,255,3,0.25));}
      .links{display:flex;gap:14px;align-items:center}
      .links a{color:rgba(255,255,255,0.78);font-size:14px}
      .links a:hover{color:rgba(255,255,255,0.95)}
      .pill{padding:10px 12px;border-radius:999px;border:1px solid rgba(9,255,3,0.24);background:rgba(9,255,3,0.10);color:rgba(255,255,255,0.95)}
      .mobileJoin{display:none}
      .card{margin:28px 0;border:1px solid rgba(255,255,255,0.12);background:rgba(255,255,255,0.06);border-radius:18px;padding:20px;box-shadow:0 20px 60px rgba(0,0,0,0.45)}
      .head{display:flex;align-items:baseline;justify-content:space-between;gap:12px;flex-wrap:wrap}
      .mini{color:rgba(255,255,255,0.70);font-size:14px}
      .mini:hover{color:rgba(255,255,255,0.95)}
      h1{margin:0 0 10px;font-size:34px;letter-spacing:-0.02em}
      h2{margin:0;font-size:18px}
      .lead{color:rgba(255,255,255,0.72);font-size:17px;line-height:1.6;max-width:86ch;margin:0 0 14px}
      .grid{display:grid;grid-template-columns:repeat(2,minmax(0,1fr));gap:12px;margin-top:12px}
      .team{display:flex;gap:12px;align-items:center;border:1px solid rgba(255,255,255,0.12);border-radius:16px;padding:14px;background:rgba(255,255,255,0.03)}
      .logo{width:46px;height:46px;border-radius:14px;border:1px solid rgba(9,255,3,0.22);background:rgba(9,255,3,0.10);display:flex;align-items:center;justify-content:center;overflow:hidden}
      .logo img{width:100%;height:100%;object-fit:cover}
      .initial{font-weight:900;color:#09ff03;text-shadow:0 0 18px rgba(9,255,3,0.25)}
      .muted{margin:6px 0 0;color:rgba(255,255,255,0.65);font-size:14px}
      .cta{display:flex;gap:12px;flex-wrap:wrap;margin-top:16px}
      .btn{
        display:inline-flex;align-items:center;justify-content:center;
        padding:12px 16px;border-radius:14px;border:1px solid rgba(255,255,255,0.14);
        background:rgba(255,255,255,0.04);
        box-shadow:0 8px 25px rgba(0,0,0,0.22);
        transition:transform .12s ease, background .12s ease;
      }
      .btn:hover{transform:translateY(-1px);background:rgba(255,255,255,0.07)}
      .btn.primary{border-color:rgba(9,255,3,0.22);background:rgba(9,255,3,0.10)}
      .btn.ghost{background:rgba(255,255,255,0.03)}
      @media (max-width:820px){.links{display:none}.mobileJoin{display:inline-flex}.grid{grid-template-columns:1fr}}
    </style>
  </body>
</html>
